gris = #b1b1b1
gris_claro = #CCC
verde = #87C542
turquesa = #33B99E
rojo = #EE3B2F
rosa = #E14095
body 
    font-size .7em
a 
    color white
a:hover 
    color white
    text-decoration none  
   
.table-responsive 
    overflow-x auto !important
    table.table
        background gris_claro 
        table-layout fixed
        width 1020px 
        tr
            td
                width 147px
                overflow hidden
                color white
                padding 0
                margin 0 
                &.dias
                    border none
                    border-left solid 1px white
                    // display inline-block
                    font-weight bold
                    padding 10px 0
                    margin 0
                    text-align center
                    // width 138px !important
                &.horas
                    border none
                    // display inline-block
                    font-weight bold
                    margin 0
                    padding 10px 0 0 0
                    text-align center
                    width 60px
                &.poneResult 
                    padding 0
                    tr td.actividad
                        border solid 1px white
                        border-bottom none
                        // display inline-block                 
                        width 147px !important
                        .fondo 
                            height 120px                     
                            opacity .7                   
                            h4
                                font-size 13px
                                padding 10px 10px 0px 10px
                                margin 0
                                text-transform uppercase
                            p 
                                color white
                                padding 10px
                                margin 0
                            &:hover 
                                opacity 1
